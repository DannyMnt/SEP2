<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="305.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EventViewController">
   <children>
      <VBox prefWidth="305.0">
         <children>
            <Pane minWidth="14.0" prefHeight="14.0" prefWidth="305.0" style="-fx-background-color: #672446;" />
            <VBox prefWidth="285.0">
               <children>
                  <Label fx:id="titleLabel" prefWidth="300.0" text="New Event" textFill="#480a29">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="2.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="dateLabel" prefWidth="164.0" text="15. 4. 2024 8:00 to 10:00">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
                  <Label fx:id="descriptionLabel" alignment="TOP_LEFT" text="fefef" wrapText="true">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
                  <Label fx:id="locationLabel" text="Location:">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <ScrollPane prefWidth="271.0">
                    <content>
                      <AnchorPane fx:id="attendeesAnchorPane" minHeight="0.0" minWidth="0.0" prefWidth="269.0">
                           <children>
                              <VBox fx:id="attendeesVBox" prefHeight="0.0" prefWidth="269.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </ScrollPane>
                  <Button mnemonicParsing="false" onAction="#removeEvent" prefWidth="55.0" text="Delete">
                     <VBox.margin>
                        <Insets bottom="5.0" left="200.0" top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
